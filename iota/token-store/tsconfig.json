{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,                         
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
      "**/*.spec.ts"
  ],
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  }
}
